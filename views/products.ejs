<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="navbar-brand" href="/home">Home</a>
            <a class="navbar-brand" href="/carts/user">Carts</a>
            <a class="navbar-brand" href="/logout">Logout</a>
          </div>
        </div>
        <div class="input-group">
          <form class="form-inline" action="/products/search/key" method="GET">
              <input type="search" class="form-control" name="search" placeholder="search" />
              <!-- <button class="btn btn-search" type="submit"><i class="fa fa-search fa-fw"></i> Search</button> -->
          </form>
      </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <div class="row">
      <% if(products) { %>
        <% products.forEach((product)=> { %>

          <div class="card col-lg-3 col-md-4 col-sm-6 col-xs-12 product-index-box">
            <a class="title-link" href="/products/<%=product._id%>">
              <img src="<%= product.image%>" class="img-fluid" alt="product image" />
              <h6 class="mt-2 mb-2" style="text-transform: uppercase;">
                <%= product.title %>
              </h6>
              <h6 class="price" name="price">Rupee â‚¹<span id="orignalprice"><%=product.price%></span>
              </h6>
            </a>
            <!-- <form action="/carts/add-to-cart/<%=product._id%>" method="post">
              <button class="btn btn-block btn-secondary mt-3 mb-3 button-style" onClick="showMessage()">
                Add to Cart
              </button>
            </form>  -->
          </div>
          <% }) %>
            <% } else { %>
              <p>No search items</p>
              <% } %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>